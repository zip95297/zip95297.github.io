#!/bin/bash

Usage() {
  echo "Usage: $0 -n|--note <md file path in obsidian> [-i|--img <image file path in obsidian>]"
  echo "       $0 -h|--help"
  echo "this script is used to post a note [with imgs to blog dir]"
  echo "execute this script in the blog root dir"
  exit 1
}

# è§£æå‚æ•°
if [[ $# -eq 0 ]]; then
  Usage
fi

while [[ $# -gt 0 ]]; do
  case $1 in
  -n | --note)
    NOTE="$2"
    NOTE_SOURCE=$NOTE
    # æ£€æŸ¥æ˜¯ä¸æ˜¯mdç»“å°¾çš„ æ–‡ä»¶
    if [[ ! -f $NOTE || "${NOTE##*.}" != "md" ]]; then
      echo "ERROR: The file must be a markdown file."
      exit 1
    fi

    # è·å–æ–‡ä»¶æ˜¯ä»€ä¹ˆæ—¶å€™åˆ›å»ºçš„
    NOTE_DATE=$(stat -f %Sm "$NOTE")
    NOTE_DATE=$(date -j -f "%b %d %H:%M:%S %Y" "$NOTE_DATE" "+%Y-%m-%d %H:%M:%S")
    NOTE_BASENAME=$(basename "$NOTE")
    echo "âš ï¸ COPY NOTE: $NOTE MOVING to source/_post ..."
    cp "$NOTE" /Users/zip95297/Repository/BLOG/zjb-blog/source/_posts
    NOTE="/Users/zip95297/Repository/BLOG/zjb-blog/source/_posts/$NOTE_BASENAME"
    /Users/zip95297/Repository/BLOG/zjb-blog/utils/addAttribute "$NOTE" "$NOTE_DATE" # æ·»åŠ å±æ€§
    /Users/zip95297/Repository/BLOG/zjb-blog/utils/addAttribute "$NOTE"              # æ·»åŠ å±æ€§
    /Users/zip95297/Repository/BLOG/zjb-blog/utils/chURL "$NOTE_BASENAME"            # ä¿®æ”¹url
    echo "----------------------------------------"
    shift 2
    ;;
  # -i|--img)
  #     IMG="$2"
  #     NOTE_NAME=$(basename "$NOTE" .md)
  #     echo "IMG: $IMG MOVING to source/images/$NOTE_NAME ..."
  #     # è·å– md çš„åå­— æ²¡æœ‰.md
  #     mkdir -p "/Users/zip95297/Repository/BLOG/zjb-blog/source/images/$NOTE_NAME"
  #     cp "$IMG"/* "/Users/zip95297/Repository/BLOG/zjb-blog/source/images/$NOTE_NAME/"
  #     echo done
  #     shift 2
  #     ;;
  -i | --img)
    IMG="$2"
    NOTE_NAME=$(basename "$NOTE" .md)
    echo "âš ï¸ COPY IMG: $IMG MOVING to source/images/$NOTE_NAME ..."

    TARGET_DIR="/Users/zip95297/Repository/BLOG/zjb-blog/source/images/$NOTE_NAME"
    mkdir -p "$TARGET_DIR"

    # ä» markdown ä¸­æå– .png/.jpg/.jpeg/.gif æ–‡ä»¶åï¼ˆObsidian è¯­æ³•ï¼‰
    spinner="////----\\\\||||"
    i=0

    count_imgs_file=$(mktemp)
    echo 0 >"$count_imgs_file"

    grep -oE '!\[\[[^]]+\.(png|jpg|jpeg|gif)\]\]' "$NOTE_SOURCE" | sed -E 's/!\[\[([^]]+)\]\]/\1/' | while read img_file; do
      src_path="$IMG/$img_file"
      if [[ -f "$src_path" ]]; then

        count_imgs=$(<"$count_imgs_file")
        count_imgs=$((count_imgs + 1))
        echo "$count_imgs" >"$count_imgs_file"

        cp "$src_path" "$TARGET_DIR/"
        count_imgs=$((count_imgs + 1))
        i=$(((i + 1) % 16))
        printf "\râš ï¸ Processing Copy images: ${spinner:i:1}  "
        # echo "âœ… Copied: $img_file"
      else
        echo "âŒ Missing: $img_file"
      fi
    done

    # æ£€æŸ¥ å¦‚æœæ²¡æœ‰å›¾ç‰‡å°±åˆ é™¤
    num=$(ls "$TARGET_DIR" | wc -l)
    if [[ $num -eq 0 ]]; then
      rm -rf "$TARGET_DIR"
      echo "âœ… No images found, ğŸ—‘ deleted: $TARGET_DIR"
    fi

    echo -e "\nâœ… Copied $count_imgs images to $TARGET_DIR"
    echo "----------------------------------------"
    /Users/zip95297/Repository/BLOG/zjb-blog/utils/extractImg "$NOTE_BASENAME" # æå–å›¾ç‰‡
    rm "$count_imgs_file"
    echo done
    shift 2
    ;;
  -h | --help)
    Usage
    ;;
  *)
    echo "Unknown option: $1"
    Usage
    ;;
  esac
done

